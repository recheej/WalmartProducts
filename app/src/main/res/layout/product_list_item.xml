<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="72dp">

    <ImageView
        android:id="@+id/imageView_product"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/product_image"
        android:layout_gravity="center_vertical"
        android:paddingStart="16dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="72dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/textView_productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"/>

        <TextView
            android:id="@+id/textView_productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Price"
            android:layout_alignBaseline="@+id/textView_productName"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/textView_productDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Description"
            android:layout_below="@+id/textView_productName"
            android:layout_alignStart="@+id/textView_productName"/>

        <TextView
            android:id="@+id/textView_outOfStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_productDescription"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="296dp"
            android:text="@string/out_of_stock"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>